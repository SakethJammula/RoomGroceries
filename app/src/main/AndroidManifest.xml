<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.roomgroceries">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ForgotPassword"
            android:theme="@style/AppTheme.NoActionBar"
            android:exported="false" />
        <activity
            android:name=".EmailAndPasswordLoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FirstActivity"
            android:exported="true"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EmailAndPasswordRegisterActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:parentActivityName="com.example.roomgroceries.FirstActivity"
             />
        <activity android:name=".NewOrder"
            android:parentActivityName="com.example.roomgroceries.MainActivity"
            />
        <activity android:name=".ViewOrderHistory"
            android:parentActivityName="com.example.roomgroceries.MainActivity"
             />
        <activity android:name=".EditOrderActivity"
            android:parentActivityName="com.example.roomgroceries.ViewOrderHistory" />
        <activity android:name=".Participants"
            android:parentActivityName="com.example.roomgroceries.ViewOrderHistory" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>